            {
                "title": "Undo last commit",
                "shortcut": "git reset --soft HEAD~1",
                "description": "Undo last commit but keep changes staged"
            },
            {
                "title": "Amend commit message",
                "shortcut": "git commit --amend -m 'New message'",
                "description": "Change the last commit message"
            },
            {
                "title": "Stash changes",
                "shortcut": "git stash / git stash pop",
                "description": "Temporarily save and restore changes"
            },
            {
                "title": "Cherry-pick commit",
                "shortcut": "git cherry-pick <commit-hash>",
                "description": "Apply a specific commit to current branch"
            },
            {
                "title": "View commit history",
                "shortcut": "git log --oneline --graph",
                "description": "Visual commit history"
            }
        ]
    },
